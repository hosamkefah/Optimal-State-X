<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">


    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="wrap_content"
        android:layout_height="211dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="85dp"
        android:contentDescription="Profile Image"
        android:src="@drawable/hosam" />

    <TextView
        android:id="@+id/welcomeText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, User!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/addClient"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_margin="2dp"
        android:layout_marginBottom="12dp"
        android:text="Add Client"
        android:textSize="18sp" />

    <Button
        android:id="@+id/removeClient"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_marginBottom="12dp"
        android:text="Remove Client"
        android:textSize="18sp"
        android:layout_margin="2dp" />

    <Button
        android:id="@+id/viewClientsHistory"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:text="view Clients History"
        android:layout_marginBottom="12dp"
        android:textSize="18sp"
        android:layout_margin="2dp" />

    <Button
        android:id="@+id/Settings1"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:text="Settings"
        android:layout_marginBottom="12dp"
        android:textSize="18sp"
        android:layout_margin="2dp" />

    <Button
        android:id="@+id/outBtn1"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_marginBottom="12dp"
        android:text="Sign out"
        android:textSize="18sp"
        android:layout_margin="2dp" />

</LinearLayout>
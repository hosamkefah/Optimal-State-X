<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:gravity="center"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Provider Settings"
        android:textSize="32sp"
        android:layout_margin="20dp" />

    <Button
        android:id="@+id/changeNameBtn"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text="Change user information"
        android:textSize="18sp"/>
    <Button
        android:id="@+id/chnagePassBtn"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text="Change user password"
        android:textSize="18sp" />
    <Button
        android:id="@+id/viewInfor"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text="Show User Informations"
        android:textSize="18sp" />

    <Button
        android:id="@+id/deleteAcc"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text="Delete Account"
        android:textSize="18sp" />



    <Button
        android:id="@+id/returnBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go back"
        android:textSize="18sp"
        android:layout_marginTop="90dp" />




</LinearLayout>